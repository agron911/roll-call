<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading"><%= user_option %>'s Login Form</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel" id='panel'>
                    <h2>Admin Login</h2>
                    <p>Please enter your email and password</p>
                    <div class="alert alert-danger" id="danger" role="alert"></div>
                </div>
                <form id="login" action='/login_post' method='post' >
                    <div class="form-group">
                        <input  type="tel" class="form-control" id="inputId" placeholder="Student ID" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Password" required autofocus>
                    </div>
                    <div class="forgot">
                        <a href="reset.html">Forgot password?</a>
                    </div>
                    <a href="<%= user_option%>user"><button type="submit" class="btn btn-primary">Login</button></a>
                    <div class='register' style="margin-top:10px">
                            <a href="/<%= user_option %>_register">Don't have an account? SIGN UP</a>
                    </div>
                </form>
            </div>
            <p class="botto-text">Thank you for using our system</p>
        </div>
    </div>


</body>
